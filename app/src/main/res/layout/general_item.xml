<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <View
        android:id="@+id/view"
        android:layout_width="100dp"
        android:layout_height="5dp"
        android:background="@color/colorGreen"
        app:layout_constraintBottom_toTopOf="@+id/txt_job"
        app:layout_constraintStart_toStartOf="@+id/txt_job"
        app:layout_constraintTop_toBottomOf="@+id/txt_name" />

    <TextView
        android:id="@+id/txt_talk"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Build Rest API with Kotlin"
        android:textColor="@color/colorDark"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_facebook"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/photo"
        app:layout_constraintTop_toBottomOf="@+id/txt_job" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Manuel Ernesto"
        android:textColor="@color/colorDark"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/txt_job"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_job"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:text="Kotlin and Firebase Developer"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_talk"
        app:layout_constraintEnd_toEndOf="@+id/txt_talk"
        app:layout_constraintStart_toStartOf="@+id/txt_talk"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <ImageButton
        android:id="@+id/btn_facebook"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/ic_facebook"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_twitter"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/photo"
        app:layout_constraintStart_toStartOf="@+id/txt_talk" />

    <ImageButton
        android:id="@+id/btn_twitter"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/ic_twitter"
        app:layout_constraintBottom_toBottomOf="@+id/btn_facebook"
        app:layout_constraintEnd_toStartOf="@+id/btn_linkedin"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_facebook" />

    <ImageButton
        android:id="@+id/btn_linkedin"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/ic_linkedin_in"
        app:layout_constraintBottom_toBottomOf="@+id/btn_twitter"
        app:layout_constraintEnd_toStartOf="@+id/btn_github"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_twitter" />

    <ImageButton
        android:id="@+id/btn_github"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/ic_github"
        app:layout_constraintBottom_toBottomOf="@+id/btn_linkedin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_linkedin" />

</androidx.constraintlayout.widget.ConstraintLayout>